{% extends 'blog/blogbase.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block main %}
    <h1>{{ post.title }}</h1>
    
    <div class="date">{{ post.publishedAt|localizeddate('medium', 'short', null, 'UTC') }}</div>
    <div class="body">
        {{ post.content|md2html }}
    </div>
{% endblock %}
